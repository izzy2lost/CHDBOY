<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material 3 Expressive Light Theme -->
    <style name="Theme.CHDBOY" parent="Theme.Material3.DayNight">
        <!-- Material 3 color tokens -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <!-- Status bar styling -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Material 3 Expressive features -->
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.CHDBOY.CornerExtraLarge</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.CHDBOY.CornerLarge</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.CHDBOY.CornerMedium</item>
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.CHDBOY.CornerSmall</item>
        
        <!-- Enhanced motion and animations -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        
        <!-- Floating Action Button styling -->
        <item name="floatingActionButtonStyle">@style/Widget.CHDBOY.FloatingActionButton</item>
        
        <!-- MaterialAlertDialog styling for better contrast -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.CHDBOY.MaterialAlertDialog</item>
    </style>
    
    <!-- No ActionBar variant -->
    <style name="Base.Theme.CHDBOY" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
    
    <!-- Custom Shape Appearances for expressive design -->
    <style name="ShapeAppearance.CHDBOY.CornerExtraLarge" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSize">28dp</item>
    </style>
    
    <style name="ShapeAppearance.CHDBOY.CornerLarge" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="ShapeAppearance.CHDBOY.CornerMedium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.CHDBOY.CornerSmall" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerSize">8dp</item>
    </style>
    
    <!-- Custom FloatingActionButton with expressive styling -->
    <style name="Widget.CHDBOY.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.CHDBOY.CornerLarge</item>
        <item name="android:elevation">8dp</item>
        <item name="hoveredFocusedTranslationZ">12dp</item>
        <item name="pressedTranslationZ">16dp</item>
    </style>
    
    <!-- Window animations -->
    <style name="WindowAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    
    <!-- MaterialAlertDialog theme overlay for light mode -->
    <style name="ThemeOverlay.CHDBOY.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">#FF8C00</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorOnSurfaceVariant">#000000</item>
        <item name="colorPrimary">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.CHDBOY.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.CHDBOY.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.CHDBOY.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.CHDBOY.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.CHDBOY.Button.TextButton.Dialog</item>
    </style>
    
    <!-- Dialog title text style -->
    <style name="MaterialAlertDialog.CHDBOY.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- Dialog body text style -->
    <style name="MaterialAlertDialog.CHDBOY.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>
    
    <!-- Dialog button style -->
    <style name="Widget.CHDBOY.Button.TextButton.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="iconTint">#000000</item>
    </style>
</resources>
