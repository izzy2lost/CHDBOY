<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <PreferenceCategory
        app:title="General" >
        
        <SwitchPreferenceCompat
            app:key="deletesource"
            app:title="Delete input file after compression" 
            app:defaultValue="false" />
        
        <ListPreference
            app:key="theme"
            app:title="Theme"
            app:defaultValue="Follow System"
            app:entries="@array/themes"
            app:entryValues="@array/themes" />
        
    </PreferenceCategory>     
    
</PreferenceScreen>